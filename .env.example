# ============================================================================
# DanSarp Herbal Centre - Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://dansarpherbal.com

# ============================================================================
# Supabase Configuration
# ============================================================================
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================================================
# Rate Limiting (Upstash Redis - Optional)
# ============================================================================
# If not provided, will use in-memory rate limiting (development only)
# Get these from https://upstash.com/
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# ============================================================================
# Email Service (Resend)
# ============================================================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@dansarpherbal.com

# ============================================================================
# SMS Service (Vonage)
# ============================================================================
# Get credentials from https://dashboard.nexmo.com/
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_FROM_NUMBER=your_vonage_phone_number_or_brand_name

# ============================================================================
# WhatsApp Service (Twilio)
# ============================================================================
# Get credentials from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+1234567890

# ============================================================================
# Payment Providers
# ============================================================================

# Paystack
# Get credentials from https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# Flutterwave
# Get credentials from https://dashboard.flutterwave.com/settings/apis
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_HASH=your_flutterwave_secret_hash

# ============================================================================
# Media Storage (Cloudinary - Optional)
# ============================================================================
# Get credentials from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================================================
# Error Monitoring (Sentry - Optional)
# ============================================================================
# Get DSN from https://sentry.io/settings/
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_DEBUG=false

# ============================================================================
# Analytics (Optional)
# ============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=dansarpherbal.com

# ============================================================================
# Google Maps (Optional but Recommended)
# ============================================================================
# The Maps Embed API is completely FREE with unlimited usage
# 
# Quick Setup:
#   1. Run: npm run setup:google-maps
#   2. Follow the interactive guide
#
# Manual Setup:
#   1. Create a Google Cloud project: https://console.cloud.google.com/
#   2. Enable billing (required but you won't be charged for Embed API)
#   3. Enable "Maps Embed API": https://console.cloud.google.com/apis/library/maps-embed-backend.googleapis.com
#   4. Create API key: https://console.cloud.google.com/google/maps-apis/credentials
#   5. (Recommended) Restrict the key:
#      - API restrictions: Select "Maps Embed API" only
#      - Application restrictions: Add HTTP referrers:
#        * http://localhost:3000/*
#        * https://dansarpherbal.com/*
#
# For detailed instructions, see: docs/GOOGLE_MAPS_SETUP.md
# Note: If not provided, the map will use address-based queries (less reliable)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================================================
# Security
# ============================================================================
# Generate a random secret for CSRF tokens
CSRF_SECRET=generate_a_random_32_character_string_here

# ============================================================================
# Development Only
# ============================================================================
# Set to true to enable Sentry in development
SENTRY_DEBUG=false
